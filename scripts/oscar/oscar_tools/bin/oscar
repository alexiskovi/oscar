OSCAR_ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/../../../.." && pwd )"

OSCAR_SCRIPTS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

EXEC_PATH=$PWD

function docker_start() {
    cd $OSCAR_ROOT_DIR
    bash $OSCAR_ROOT_DIR/docker/scripts/dev_start.sh -b
    cd $EXEC_PATH
}

function docker_stop() {
    cd $OSCAR_ROOT_DIR
    bash $OSCAR_ROOT_DIR/docker/scripts/dev_start.sh stop
    cd $EXEC_PATH
}

function docker_into() {
    cd $OSCAR_ROOT_DIR
    bash $OSCAR_ROOT_DIR/docker/scripts/dev_into.sh
    cd $EXEC_PATH
}

function generate_trajectory() {
    cd $OSCAR_ROOT_DIR
    python modules/tools/oscar_tools/trajectories/generate_trajectory.py "${@}"
    cd $EXEC_PATH
}

function trajectory_play() {
    cd $OSCAR_ROOT_DIR
    NUM_PROCESSES="$(pgrep -c -f "oscar_tools/trajectories/play_trajectory.py")"
    if [ "${NUM_PROCESSES}" -ne 0 ]; then
      pkill -SIGKILL -f oscar_tools/trajectories/play_trajectory.py
    fi

    python modules/tools/oscar_tools/trajectories/play_trajectory.py "${@}"
    cd $EXEC_PATH
}

function trajectory_stop() {
    NUM_PROCESSES="$(pgrep -c -f "oscar_tools/trajectories/play_trajectory.py")"
    if [ "${NUM_PROCESSES}" -ne 0 ]; then
      pkill -SIGKILL -f oscar_tools/trajectories/play_trajectory.py
    fi
}

function print_help() {
    printf "Possible arguments:\n"
    printf "oscar docker start - Launches all apollo docker containers\n"
    printf "oscar docker stop  - Stops all apollo docker containers\n"
    printf "oscar docker into  - Open bash in apollo docker container\n"
    printf "\n"
    printf "oscar trajectory generate - Generates simple trajectories depend on params\n"
    printf "                            Possible trajectory types:\n"
    printf "                               8type - Eight-type trajectory with trapezoidal linear\n"
    printf "                                       velocity profile and constant sharpness\n"
    printf "                               0type - Zero-type trajectory with trapezoidal linear\n"
    printf "                                       velocity profile and constant sharpness\n"
    printf "oscar trajectory paly     - Play simple trajectories depend on params\n"
    printf "oscar trajectory stop     - Stops playing and recording trajectory\n"
    printf "\n"
    printf "oscar help         - Show this help\n"
    printf "\n"
    printf "Plaese use Tab to get autocompleted arguments.\n"
}

if [ -z "$1" ]; then
  echo "No command passed\n"
  print_help
  exit 2
fi


if [ "$1" == "docker" ]; then
    if [ "$2" == "start" ]; then
        docker_start
    elif [ "$2" == "stop" ]; then
        docker_stop
    elif [ "$2" == "into" ]; then
        docker_into
    else
        printf "Possible arguments:\n"
        printf "start - Launches all apollo docker containers\n"
        printf "stop -  Stops all apollo docker containers\n"
        printf "into -  Open bash in apollo docker container\n"
    fi


elif [ "$1" == "trajectory" ]; then
    if [ "$2" == "generate" ]; then
        if [ "$3" == "8type" ] || [ "$3" == "0type" ]; then
            generate_trajectory "-t" "${3}" "${@:4}"
        else
            printf "Possible trajectory types:\n"
            printf "   8type - Eight-type trajectory with trapezoidal linear\n"
            printf "           velocity profile and constant sharpness\n"
            printf "   0type - Zero-type trajectory with trapezoidal linear\n"
            printf "           velocity profile and constant sharpness\n"
        fi

    elif [ "$2" == "play" ]; then
        trajectory_play "${@:3}"
    elif [ "$2" == "stop" ]; then
        trajectory_stop
    else
        printf "Possible arguments:\n"
        printf "oscar trajectory generate - Generates simple trajectories depend on params\n"
        printf "oscar trajectory paly     - Play simple trajectories depend on params\n"
        printf "oscar trajectory stop     - Stops playing and recording trajectory\n"
    fi

elif [ "$1" == "help" ]; then
    print_help

else
    print_help
fi
